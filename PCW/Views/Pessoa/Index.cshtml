                                    <a title="Visualizar" class="btn btn-sm btn-info" id="" href="~/Pessoa/Details/@item.SEQPESSOA"><i class="material-icons">remove_red_eye</i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


